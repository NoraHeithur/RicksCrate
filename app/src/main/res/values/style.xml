<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  CardView  -->
    <style name="Rick.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/spacing_small</item>
        <item name="cardElevation">@dimen/spacing_short</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="Rick.MaterialCardView_mini" parent="Rick.MaterialCardView">
        <item name="cardCornerRadius">@dimen/spacing_normal</item>
        <item name="cardElevation">@dimen/width_height_no_size</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <!--  TextView  -->
    <style name="Rick.TextView" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/textSize_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Rick.TextView.body" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textSize_body</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Rick.TextView.body2" parent="Rick.TextView.body">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textSize_body2</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Rick.TextView.body_small" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textSize_body_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Rick.TextView.body_bold" parent="Rick.TextView.body">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/textSize_body</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Rick.TextView.body_viewsStart" parent="Rick.TextView.body_small">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/textSize_body2</item>
    </style>

    <style name="Rick.TextView.body_main" parent="Rick.TextView.body">
        <item name="autoSizeMinTextSize">@dimen/textSize_body_small</item>
        <item name="autoSizeMaxTextSize">@dimen/textSize_body</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="lineHeight">@dimen/spacing_normal</item>
        <item name="android:lines">@integer/vertical_item_span_count</item>
        <item name="android:maxLines">@integer/vertical_item_span_count</item>
    </style>

    <style name="Rick.TextView.body_main_small" parent="Rick.TextView.body_small">
        <item name="autoSizeMinTextSize">@dimen/textSize_body_mini</item>
        <item name="autoSizeMaxTextSize">@dimen/textSize_body_small</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textSize">@dimen/textSize_body_small</item>
    </style>

    <style name="Rick.TextView.body_mini" parent="Rick.TextView.body_small">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textSize_body_mini</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Rick.TextView.body_large" parent="Rick.TextView.body">
        <item name="android:textSize">@dimen/textSize_title_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Rick.TextView.body_details_large" parent="Rick.TextView.body_large">
        <item name="autoSizeMinTextSize">@dimen/textSize_title</item>
        <item name="autoSizeMaxTextSize">@dimen/textSize_title_large</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="lineHeight">@dimen/spacing_normal</item>
        <item name="android:lines">@integer/vertical_item_span_count</item>
        <item name="android:maxLines">@integer/vertical_item_span_count</item>
    </style>
</resources>